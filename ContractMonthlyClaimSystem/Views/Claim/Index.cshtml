        <tr>
            <th>Month</th>
            <th>Hours</th>
            <th>Amount</th>
            <th>Status</th>
            <th>Submitted Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <!-- Static dummy data -->
        <tr>
            <td>January 2023</td>
            <td>40</td>
            <td>$1200</td>
